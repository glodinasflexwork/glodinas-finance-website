# Example environment configuration for Glodinas Finance website
# Copy this file to .env and replace the placeholder values

# Database connection string for Prisma
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# JWT secret used for admin authentication
JWT_SECRET="change-me"

# Token for sending emails via Mailtrap
MAILTRAP_API_TOKEN="your-mailtrap-token"

# Email address that receives new client notifications
NOTIFICATION_EMAIL="notify@example.com"

# Sender email address for outgoing mails
EMAIL_FROM="noreply@example.com"

# OAuth credentials for Moneybird integration
MONEYBIRD_CLIENT_ID="your-moneybird-client-id"
MONEYBIRD_CLIENT_SECRET="your-moneybird-client-secret"

# Base URL of your application, e.g. http://localhost:3000 for local dev
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Setup key required for initial admin setup
ADMIN_SETUP_KEY="your-setup-key"
